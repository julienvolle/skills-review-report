{% macro form_row(level) %}

    <div class="row g-0">

        <div class="col-auto d-flex align-items-center" title="{% trans %}page.framework.level.btn_move{% endtrans %}">
            <i class="handle bi bi-arrows-fullscreen"></i>
        </div>

        <div class="col px-2">
            {{ form_widget(level.name, {'attr': {'class': 'form-control-sm rounded-0'}}) }}
            {{ form_widget(level.priority) }}
        </div>

        <div class="col-auto d-flex align-items-center">
            <button type="button"
                    title="{% trans %}page.framework.level.btn_del{% endtrans %}"
                    class="form-collection-button-del text-danger bg-transparent border-0">
                <i class="bi bi-trash"></i>
            </button>
        </div>

    </div>

{% endmacro %}
